<?xml version="1.0" encoding="UTF-8"?><!-- 单独一个完整输入框时带圆角 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/c_ffffff" />
            <corners
                android:bottomLeftRadius="@dimen/dp_8"
                android:bottomRightRadius="@dimen/dp_0"
                android:topLeftRadius="@dimen/dp_0"
                android:topRightRadius="@dimen/dp_0" />
            <stroke
                android:width="@dimen/dp_1"
                android:color="@color/c_ffffff" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/dp_1"
        android:left="@dimen/dp_1"
        android:right="@dimen/dp_1"
        android:top="@dimen/dp_1">
        <shape>
            <solid android:color="@color/c_ffffff" />
            <corners
                android:bottomLeftRadius="@dimen/dp_8"
                android:bottomRightRadius="@dimen/dp_0"
                android:topLeftRadius="@dimen/dp_0"
                android:topRightRadius="@dimen/dp_0" />
        </shape>
    </item>
</layer-list> 
