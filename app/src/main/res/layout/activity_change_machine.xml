<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f5f6fa"
    android:orientation="vertical"
    tools:context=".module.changemachine.ChangeMachineActivity">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentTop="true"
        android:background="@color/c_ffffff"
        app:titleTextColor="@color/c_333333">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_change_machine_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ic_toolbar_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:text="一键新机"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_18" />

        </FrameLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_change_machine_bg"
                android:orientation="vertical"
                android:layout_below="@+id/toolbar">

                <RelativeLayout
                    android:id="@+id/rl_phone_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:text="手机品牌"
                        android:textColor="@color/c_6d6d6d"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_phone_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:drawableRight="@drawable/ic_expand_service_right"
                        android:drawablePadding="@dimen/dp_10"
                        android:textColor="@color/c_303030"
                        android:textSize="@dimen/sp_15"
                        tools:text="OPPO" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@color/c_edeef0" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_phone_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:text="手机型号"
                        android:textColor="@color/c_6d6d6d"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_phone_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:drawableRight="@drawable/ic_expand_service_right"
                        android:drawablePadding="@dimen/dp_10"
                        android:textColor="@color/c_303030"
                        android:textSize="@dimen/sp_15"
                        tools:text="OPPO A83" />
                </RelativeLayout>

            </LinearLayout>

            <!-- 进入界面EditText失去焦点-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <requestFocus />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_change_machine_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_weight="2"
                        android:text="机器名"
                        android:textColor="@color/c_6d6d6d"
                        android:textSize="@dimen/sp_15" />

                    <RelativeLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="4"
                        android:background="@drawable/shape_input_box_bg">

                        <ImageView
                            android:id="@+id/iv_device_name_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_11"
                            android:src="@drawable/ic_edit_text_clear"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/et_device_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toLeftOf="@id/iv_device_name_delete"
                            android:background="@null"
                            android:hint="请输入机器名"
                            android:textColor="@color/c_333333"
                            android:textColorHint="@color/c_cccccc"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_weight="2"
                        android:text="机器MAC地址"
                        android:textColor="@color/c_6d6d6d"
                        android:textSize="@dimen/sp_15" />

                    <RelativeLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="4"
                        android:background="@drawable/shape_input_box_bg">

                        <ImageView
                            android:id="@+id/iv_wifi_mac_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_11"
                            android:src="@drawable/ic_edit_text_clear"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/et_wifi_mac"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toLeftOf="@id/iv_wifi_mac_delete"
                            android:background="@null"
                            android:hint="请输入机器MAC地址"
                            android:textColor="@color/c_333333"
                            android:textColorHint="@color/c_cccccc"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_weight="2"
                        android:text="蓝牙MAC地址"
                        android:textColor="@color/c_6d6d6d"
                        android:textSize="@dimen/sp_15" />

                    <RelativeLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="4"
                        android:background="@drawable/shape_input_box_bg">

                        <ImageView
                            android:id="@+id/iv_bluetooth_mac_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_11"
                            android:src="@drawable/ic_edit_text_clear"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/et_bluetooth_mac"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toLeftOf="@id/iv_bluetooth_mac_delete"
                            android:background="@null"
                            android:hint="请输入蓝牙MAC地址"
                            android:textColor="@color/c_333333"
                            android:textColorHint="@color/c_cccccc"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_weight="2"
                        android:text="IMEI"
                        android:textColor="@color/c_6d6d6d"
                        android:textSize="@dimen/sp_15" />

                    <RelativeLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="4"
                        android:background="@drawable/shape_input_box_bg">

                        <ImageView
                            android:id="@+id/iv_imei_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_11"
                            android:src="@drawable/ic_edit_text_clear"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/et_imei"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toLeftOf="@id/iv_imei_delete"
                            android:background="@null"
                            android:digits="0123456789"
                            android:hint="请输入IMEI"
                            android:textColor="@color/c_333333"
                            android:textColorHint="@color/c_cccccc"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_27"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_weight="2"
                        android:text="可用空间"
                        android:textColor="@color/c_6d6d6d"
                        android:textSize="@dimen/sp_15" />

                    <RelativeLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="4"
                        android:background="@drawable/shape_input_box_bg">

                        <EditText
                            android:id="@+id/et_usable"
                            android:layout_width="@dimen/dp_105"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:background="@null"
                            android:digits="0123456789."
                            android:hint="请输入可用空间"
                            android:textColor="@color/c_333333"
                            android:textColorHint="@color/c_cccccc"
                            android:textSize="@dimen/sp_15" />

                        <ImageView
                            android:id="@+id/iv_usable_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_105"
                            android:src="@drawable/ic_edit_text_clear"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_12"
                            android:text="GB"
                            android:textColor="@color/c_bbbbbb"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/layout_change_machine_bottom" />

</RelativeLayout>