<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_expand_service_icon"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_margin="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_expand_service_default" />

        <TextView
            android:id="@+id/tv_expand_service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_expand_service_icon"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_expand_service_icon"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"
            android:singleLine="true"
            android:text="服务名称"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_expand_service_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_expand_service_title"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toRightOf="@+id/tv_expand_service_title"
            android:src="@drawable/ic_expand_service_detail" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_expand_service_title"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/ic_expand_service_right" />

        <TextView
            android:id="@+id/tv_expand_service_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_expand_service_title"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/sp_14"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_toRightOf="@+id/iv_expand_service_icon"
            android:text="这里显示的是服务说明文字这里显示的是服务说明文字这里显示的是服务说明文字"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_tail_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/c_f5f6fa"
        android:orientation="horizontal" />

</LinearLayout>