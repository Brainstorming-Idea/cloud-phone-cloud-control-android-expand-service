<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:layout_alignParentBottom="true"
    android:background="@color/c_ffffff"
    android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentTop="true"
        android:background="@color/c_f5f6fa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_close_proxy"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_close_proxy_bg"
            android:gravity="center"
            android:text="关闭IP代理"
            android:padding="@dimen/dp_7"
            android:textColor="@color/c_515ff0"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_start_proxy"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_start_proxy_bg"
            android:gravity="center"
            android:padding="@dimen/dp_7"
            android:text="保存并切换"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>
</RelativeLayout>